{
  "name": "@mzohaibnaz/ui-core",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "exports": {
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./themes/*.css": "./dist/themes/*.css",
    "./animations": {
      "import": "./dist/animations/index.js",
      "types": "./dist/animations/index.d.ts"
    },
    "./animations/motion": {
      "import": "./dist/animations/motion/index.js",
      "types": "./dist/animations/motion/index.d.ts"
    },
    "./animations/motion/*": {
      "import": "./dist/animations/motion/*/index.js",
      "types": "./dist/animations/motion/*/index.d.ts"
    },
    "./animations/motion/types": {
      "import": "./dist/animations/motion/types.js",
      "types": "./dist/animations/motion/types.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:ts": "tsc -p tsconfig.build.json",
    "build:assets": "cpy \"src/**/*.css\" \"src/**/*.d.ts\" dist/",
    "postbuild": "rimraf dist/themes/*.d.ts*",
    "build": "npm run build:ts && npm run build:assets",
    "dev": "tsc -p tsconfig.build.json --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "cpy-cli": "^6.0.0",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.6.0"
  }
}
